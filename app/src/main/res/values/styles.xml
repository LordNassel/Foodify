<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- OK -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>             <!-- OK -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>     <!-- OK -->
        <item name="colorAccent">@color/colorAccent</item>               <!-- OK -->
        <item name="windowActionBar">false</item>                        <!-- OK -->
        <item name="windowNoTitle">true</item>                           <!-- OK -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

 </resources>